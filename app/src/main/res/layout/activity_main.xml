<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/board_area"
        android:layout_width="240dp"
        android:layout_height="480dp"
        android:background="#000000"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        >
        <com.example.s14011.tetorisu.Board
            android:id="@+id/borad"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <TextView
        android:id="@+id/score_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/board_area"
        android:layout_alignTop="@id/board_area"
        android:textSize="20sp"
        android:text="@string/score"
        android:textColor="#000"
        />
    <TextView
        android:id="@+id/score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/board_area"
        android:layout_below="@id/score_label"
        android:gravity="right"
        android:textSize="20sp"
        android:text="0"
        android:textColor="#000"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/board_area"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:weightSum="4">

    <ImageButton
        android:id="@+id/left"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:onClick="gameButtonClick"
        android:scaleType="fitCenter"
        android:text="@string/left"
        />
    <ImageButton
        android:id="@+id/right"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:onClick="gameButtonClick"
        android:scaleType="fitCenter"
        android:src="@android:drawable/ic_media_play"
        android:text="@string/right"
        />

    <ImageButton
        android:id="@+id/fall"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:onClick="gameButtonClick"
        android:scaleType="fitCenter"
        android:text="@string/fall"
        />

    <ImageButton
        android:id="@+id/rotate"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:onClick="gameButtonClick"
        android:scaleType="fitCenter"
        android:src="@android:drawable/ic_menu_rotate" />

</LinearLayout>

</RelativeLayout>
